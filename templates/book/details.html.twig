{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
<div>
<h1>Book Details</h1>
<div>
{% if book %}
    <img src="{{ asset(book.author.picture) }}" alt="{{'Description of the image : ' ~ book.author.username }}" height="150px" width="150px">
    <p><b>Title : </b> {{ book.title }} </p>
    <p><b>Category : </b> {{ book.category }} </p>
    <p><b>Author : </b> {{ book.author.username }} </p>
    <p><b>Publication Date : </b> {{ book.publicationDate | date('d/m/Y') }} </p>
    <p><b>Published : </b> {{ book.enabled? 'Yes' : 'No' }} </p>
{% endif %}
</div>
<a href="{{ path('app_book_list') }}">Return to List</a>
</div>
{% endblock %}
